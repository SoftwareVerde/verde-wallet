<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/send_transaction_outputs_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="#202520"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_balance_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:listitem="@layout/transaction_output_item"
        tools:itemCount="3"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_balance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="2dp"
        android:background="@drawable/send_fragment_bottom_background" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/send_to_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#404040">
            <TextView
                android:id="@+id/send_to_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:lines="1"
                android:padding="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#FFFFFF"
                android:text="1111111111111111111114oLvT2"
            />
            <ImageView
                android:id="@+id/scan_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="7dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_focus_center_24dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/selected_amount_container"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/send_to_address_container"
            app:layout_constraintBottom_toTopOf="@id/send_confirm_bar_container"
            android:background="#404040"
            android:orientation="horizontal" >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_token_amount_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:text="0 BVT"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="1dp"
                android:textSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="32sp"
                app:autoSizeTextType="uniform"
            />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_amount_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|center_vertical"
                android:background="#404040"
                android:textColor="#FF5555"
                android:text="0 BCH"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="1dp"
                android:textSize="12sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="32sp"
                app:autoSizeTextType="uniform"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/desired_send_amount_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/send_to_address_container"
            app:layout_constraintBottom_toTopOf="@id/send_confirm_bar_container"
            app:layout_constraintLeft_toRightOf="@id/selected_amount_container"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="#FFFFFF" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desired_send_token_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="0 BVT"
                    android:textSize="12sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeMaxTextSize="32sp"
                    app:autoSizeTextType="uniform"
                    android:visibility="gone"
                />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desired_send_usd_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="0 USD"
                    android:textSize="12sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeMaxTextSize="32sp"
                    app:autoSizeTextType="uniform"
                />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/desired_send_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#FFFFFF"
                    android:background="#404040"
                    android:textStyle="bold"
                    android:text="0 BCH"
                    android:textSize="12sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeMaxTextSize="32sp"
                    app:autoSizeTextType="uniform"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/calculated_fee_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#E0E0E0"
                android:background="#404040"
                android:textSize="12sp"
                android:enabled="false"
                android:clickable="false"
                android:text="+0.00000272 BCH"
            />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/send_confirm_bar_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" >

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/send_confirm_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/colorPrimary"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/seekbar_background"
                android:splitTrack="false"
                android:paddingStart="0dp"
                android:progress="5"
            />

            <TextView
                android:id="@+id/send_confirm_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Swipe right to send."
                android:textColor="#B6FFB6"
                android:textStyle="bold"
                android:enabled="false"
                android:clickable="false"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>