<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#202520" >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/public_keys_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#404040"
        tools:listitem="@layout/public_key_item"
        tools:itemCount="3"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/public_keys_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/add_icon"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/public_keys_action_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/clear"
        android:backgroundTint="#A5A5A5"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/public_keys_import_key_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.85"
        android:scaleY="0.85"
        app:layout_constraintLeft_toLeftOf="@id/public_keys_action_cancel_button"
        app:layout_constraintRight_toRightOf="@id/public_keys_action_cancel_button"
        app:layout_constraintTop_toTopOf="@id/public_keys_action_cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/public_keys_action_cancel_button"
        android:src="@drawable/input_icon"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="gone"
    />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/public_keys_create_key_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.85"
        android:scaleY="0.85"
        app:layout_constraintLeft_toLeftOf="@id/public_keys_action_cancel_button"
        app:layout_constraintRight_toRightOf="@id/public_keys_action_cancel_button"
        app:layout_constraintTop_toTopOf="@id/public_keys_action_cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/public_keys_action_cancel_button"
        android:src="@drawable/add_box_icon"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="gone"
    />

</androidx.constraintlayout.widget.ConstraintLayout>